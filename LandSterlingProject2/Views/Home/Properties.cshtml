                    <div class="pagination-box hidden-mb-45 text-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" onclick="PrevClick();">Prev</a>
                                </li>
                                @for (int i = 0; i < ViewBag.PageList.Count; i++)
                                {
                                    <li class="page-item"><a class="page-link @{@Html.Raw(!ViewBag.PageList[i].StartsWith(".") && (ViewBag.TargetPage + 1 == int.Parse(ViewBag.PageList[i])) ? "active" : "")}" onclick="PageClick(@{@Html.Raw(ViewBag.PageList[i])});">@{@Html.Raw(ViewBag.PageList[i])}</a></li>
                                }
                                <li class="page-item">
                                    <a class="page-link" onclick="NextClick();">Next</a>
